@model MoviesListViewModel




<div class="container">
    <section id="section_1">
        @{
            string[] images = Model.MovieImages.ToArray();
            int itemCounter = (int)images.Count() / 6;
            int j = 0;

            @if (itemCounter >= 1)
            {
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    @if (itemCounter > 1)
                    {
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < itemCounter; i++)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i >= 1 ? "active" : "")"></li>
                            }
                        </ol>
                    }
                    <div class="carousel_inner_container">
                        <div class="carousel-inner">

                            @for (int i = 0; i < itemCounter; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">

                                    <div class="row">
                                        @for (int k = 0; k < 6; k++)
                                        {
                                            <div class="col-2 no-padding img-border-dark">
                                                <img src="~/assets/images/@images[j]" class="carousel-img" />
                                            </div>
                                            j++;
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (itemCounter > 1)
                        {
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        }
                    </div>
                </div>
            }
        }
    </section>
</div>